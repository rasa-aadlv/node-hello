{
  "git": {
    "requireBranch": "release/*",
    "commitMessage": "Release ${version}",
    "requireCleanWorkingDir": true
  },
  "hooks": {
    "after:bump": "npx auto-changelog -p"
  },
  "github": {
    "release": true,
    "web": true,
    "autoGenerate": true
  },
  "npm": {
    "publish": false
  }
}
