{
  "git": {
    "requireBranch": "release/*",
    "commitMessage": "Release ${version}",
    "requireCleanWorkingDir": true
  },
  "hooks": {
    "after:bump": "npx auto-changelog -p"
  },
  "github": {
    "release": true,
    "autoGenerate":"true",
    "tokenRef": "GHA_TOKEN"
  },
  "npm": {
    "publish": false
  }
}
